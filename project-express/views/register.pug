extends layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1 #{title}

        // register form
        form(method='POST' action='./register/users')
          div.form-group
            label(for='username') Username
            input#username.form-control(type='text' name='customerUsername')
          div.form-group
            label(for='name') First Name
            input#customerFirstName.form-control(type='text' name='customerFirstName')
          div.form-group
            label(for='name') Last Name
            input#customerLastName.form-control(type='text' name='customerLastName')
          div.form-group
            label(for='pw') Password
            input#customerPassword.form-control(type='password' placeholder='password' name='customerPassword')
          //- div.form-group
          //-   label(for='pw2') Confirm Password
          //-   input#pw2.form-control(type='password' placeholder='*********' name='confirmPassword')
          button.btn.btn-primary(type='submit') Register now