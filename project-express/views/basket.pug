extends layout

block content
  if !basket
    h1 Jelenleg Ã¼res a kosarad.
  else
    .container-fluid
      .row
        .col
          h1 This is your BASKET (BasketID: #{basket[0].basketID}).
          table.table
            thead
              tr
                th Name
                th Category
                th Publisher
                th Price
                th Quantity
                th Delete Basket Item
            tbody.product-in-basket-to-order-table
              each item in basket
                tr.product-in-basket-to-order
                  td #{item.productName}
                  td #{item.productCategory}
                  td #{item.publisher}
                  td #{item.price}                
                  td #{item.basketQuantity}                
                  td 
                    button(onclick='onRemoveItemFromBasketHandler(' + item.prodID + ')' id="button"+item.prodID) Remove Item
      .row              
        .col
          h1 Your basket value:  
          h2(id='sumOfBasket') #{sumOfBasketPrice}
      .row              
        .col
          button(onclick='orderButtonHandler(' + basket[0].basketID + '); secondFunc();' class='btn btn-secondary product-in-basket-to-order-button') Order
  script(src='/javascript/orderButtonHandler.js')
          
      