extends layout

block content
  .container-fluid
    .row
      .col-lg-6#container-img
        - var picUrl = product.pictureURL
        img(src='/product-img'+picUrl alt='album_cover')
      .col-lg-6#container-proddata
        h1 #{product.productName}  
        br
        // p ID: #{product.id}
        p Category: #{product.productCategory}
        // p SEO Friendly Name: #{product.seoFriendlyProductName}
        p Publisher: #{product.publisher}
        p Price: #{product.price} HUF
        p Quantity:
        input.form-control#quantity(type='number' name='quantity' value='1' data-type='number' step='1' min='1')
        br
        br
        button#basketButton(onclick='postHandler()')  Add to cart

