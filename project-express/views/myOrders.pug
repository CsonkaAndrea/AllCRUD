extends layout

block content
  .row
    .col-10
      table.table.table-striped
        thead
          tr
            th ID
            th Order date
            th Order status
            th Product name
            th Ordered quantity
        tbody
          each item in orders
           tr
             td #{item.id}
             td #{item.orderDate}
             td #{item.orderStatus}
             td #{item.productName}
             td #{item.orderQuantity}
